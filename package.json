  "repository": {
    "type": "git",
    "url": "git+https://github.com/tastekim/chat-cli.git"
  },
  "bugs": {
    "url": "https://github.com/tastekim/chat-cli/issues"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "chalk": "^5.4.1",
