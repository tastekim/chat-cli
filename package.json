    "ink": "^6.0.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-markdown": "^1.0.4",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.7.0",
    "jimp": "^1.6.0",
    "marked": "^16.0.0",
    "open": "^10.1.2",
    "react": "^19.1.0",
    "terminal-image": "^3.1.1",
    "terminal-kit": "^3.1.1",
    "ws": "^8.18.3"
